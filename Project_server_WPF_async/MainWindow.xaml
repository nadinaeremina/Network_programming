<Window x:Class="Project_server_WPF_async.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_server_WPF_async"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Button Click="Button_Click" HorizontalAlignment="Center" VerticalAlignment="Center" Height="50">Создать подключение</Button>
        <Button Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Height="50" Width="127" Click="Button_Click_1">Подключиться</Button>
        <StackPanel Grid.Row="2" Orientation="Vertical">
            <Label HorizontalAlignment="Center">Сообщение:</Label>
            <TextBox Grid.Row="2" x:Name="txt_label" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBox>
        </StackPanel>
    </Grid>
</Window>
