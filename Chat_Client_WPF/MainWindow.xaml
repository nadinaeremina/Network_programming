<Window x:Class="Chat_Client_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chat_Client_WPF"
        mc:Ignorable="d"
        Title="Client" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="0,0,0,-15">
            <TextBlock x:Name="txt_name" Height="34" FontSize="16" Margin="331,0,336,0">Enter your name:</TextBlock>
            <TextBox Width="200" Height="27"/>
            <StackPanel Orientation="Horizontal">
                <StackPanel Height="357">
                    <TextBox x:Name="DataTB" IsReadOnly="False" Margin="5" Width="380"  Height="292" Foreground="DimGray" TextWrapping="Wrap" />
                    <Button x:Name="send_btn" Width="174" Content="To Send" Height="30" Click="send_btn_Click" />
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
