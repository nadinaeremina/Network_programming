<Window x:Class="Chat_Server_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chat_Server_WPF"
        mc:Ignorable="d"
        Title="Server" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <StackPanel>
                <TextBlock Height="31" HorizontalAlignment="Center" FontSize="16">Sending...</TextBlock>
                <TextBox x:Name="OutputDataTB" IsReadOnly="False" 
                   TextWrapping="Wrap" AcceptsReturn="True" Width="400" Height="375" TextChanged="OutputDataTB_TextChanged"></TextBox>
            </StackPanel>
            <StackPanel>
                <TextBlock Height="31" HorizontalAlignment="Center" FontSize="16">Receiving...</TextBlock>
                <TextBox x:Name="InputDataTB" IsReadOnly="True" 
                   TextWrapping="Wrap" AcceptsReturn="True"  Width="400" Height="376" TextChanged="InputDataTB_TextChanged"></TextBox>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
