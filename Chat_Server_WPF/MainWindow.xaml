<Window x:Class="Chat_Server_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chat_Server_WPF"
        mc:Ignorable="d"
        Title="Server" Height="500" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Button Height="100" Click="Button_Click" Width="200" Margin="50">Start Server</Button>
            <StackPanel>
                <TextBlock Margin="5" TextAlignment="Center" FontWeight="Bold" FontSize="16">Message content</TextBlock>
                <TextBox x:Name="DataTB" IsReadOnly="True" TextWrapping="Wrap" Width="400" Height="339" ></TextBox>
                <Button Width="100" Height="50" x:Name="send_btn" Click="send_btn_Click" >Send message</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
