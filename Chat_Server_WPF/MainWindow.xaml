<Window x:Class="Chat_Server_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chat_Server_WPF"
        mc:Ignorable="d"
        Title="Server" Height="450" Width="800">
    <Grid>
        <StackPanel Width="798">
            <Button Click="Button_Click">Start</Button>
            <TextBox x:Name="DataTB" IsReadOnly="False" 
                   TextWrapping="Wrap" AcceptsReturn="True" Width="400" Height="355" ></TextBox>
            <Button x:Name="send_btn" Height="44" Width="240" Click="send_btn_Click" >Send</Button>
            <TextBox x:Name="test_txt"></TextBox>
        </StackPanel>
    </Grid>
</Window>
